// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- USUÁRIOS (JOVENS) ---
model User {
  id            String    @id @default(cuid())
  name          String
  email         String?   @unique
  phone         String?
  password      String?
  role          Role      @default(JOVEM)

  // FOTO DE PERFIL
  avatar        String    @default("1")

  // Gamificação
  xp            Int       @default(0)
  level         Int       @default(1)
  currentStreak Int       @default(0)
  bestStreak    Int       @default(0)
  lastActivity  DateTime  @default(now())

  // Comunhão
  squadId       String?
  squad         Squad?    @relation(fields: [squadId], references: [id])

  // Histórico
  attendances   Attendance[]
  quizResults   QuizResult[]
  notifications Notification[]

  // Histórico de Leitura
  lessonHistory LessonHistory[]

  createdAt     DateTime  @default(now())
}

enum Role {
  JOVEM
  LIDER
  PROFESSOR
  ADMIN
}

// --- TRIBOS / ESQUADRÕES ---
model Squad {
  id          String   @id @default(cuid())
  name        String
  totalXp     Int      @default(0)
  members     User[]
}

// --- EBD E QUIZZES ---
model Lesson {
  id          String   @id @default(cuid())
  title       String

  // Atualização para suportar o novo editor
  description String?  // <--- NOVO: Resumo da lição
  videoUrl    String?  // <--- NOVO: Link do YouTube
  content     String?  // (Mantido como opcional para backup de dados antigos)

  date        DateTime
  isPublished Boolean  @default(false)

  questions   Question[]
  lessonHistory LessonHistory[]
}

model Question {
  id            String   @id @default(cuid())
  lessonId      String

  // Atualização para suportar o novo editor
  title         String   @default("") // <--- NOVO: Título da pergunta (O código novo usa esse)
  text          String?  // (Mantido como opcional para backup)

  optionA       String
  optionB       String
  optionC       String
  optionD       String
  correctOption String
  xpReward      Int      @default(50)

  lesson        Lesson   @relation(fields: [lessonId], references: [id])
  results       QuizResult[]
}

model QuizResult {
  id          String   @id @default(cuid())
  userId      String
  questionId  String
  isCorrect   Boolean
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  question    Question @relation(fields: [questionId], references: [id])
}

// --- PRESENÇA ---
model Attendance {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime @default(now())
  type      EventType

  user      User     @relation(fields: [userId], references: [id])
}

enum EventType {
  EBD
  QUIZ
  CULTO_DOMINGO
  CULTO_QUINTA
  EVENTO_EXTRA
}

// --- NOTIFICAÇÕES ---
model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

// --- HISTÓRICO DE LEITURA ---
model LessonHistory {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  date      DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  lesson    Lesson   @relation(fields: [lessonId], references: [id])

  @@unique([userId, lessonId])
}